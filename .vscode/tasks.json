{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-world",
      "type": "shell",
      "command": "/usr/bin/g++",
      "args": [
        "-std=c++17",
        "-g",
        "src/LivingWorld.cpp",
        "src/World.cpp",
        "src/Organism.cpp",
        "src/Animal.cpp",
        "src/Plant.cpp",
        "src/Position.cpp",
        "src/Grass.cpp",
        "src/Sheep.cpp",
        "src/Milkweed.cpp",
        "src/Wolf.cpp",
        "src/Toadstool.cpp",
        "src/OrganismFactory.cpp",
        "-Iinclude",
        "-o",
        "world.out"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Buduje wersję konsolową LivingWorld"
    },
    {
      "label": "build-world-sdl",
      "type": "shell",
      "command": "/usr/bin/g++",
      "args": [
        "-std=c++17",
        "-g",
        "src/main_sdl.cpp",
        "src/World.cpp",
        "src/Organism.cpp",
        "src/Animal.cpp",
        "src/Plant.cpp",
        "src/Position.cpp",
        "src/Grass.cpp",
        "src/Sheep.cpp",
        "src/Milkweed.cpp",
        "src/Wolf.cpp",
        "src/Toadstool.cpp",
        "src/OrganismFactory.cpp",
        "src/SdlRenderer.cpp",
        "-Iinclude",
        "-o",
        "world_sdl",
        "-lSDL2",
        "-lSDL2_ttf"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "detail": "Buduje wersję SDL z oknem"
    }
  ]
}
