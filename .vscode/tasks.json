{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-world",
      "type": "shell",
      "command": "/usr/bin/g++",
      "args": [
        "-std=c++17",
        "-g",
        "LivingWorld.cpp",
        "World.cpp",
        "Organism.cpp",
        "Animal.cpp",
        "Plant.cpp",
        "Position.cpp",
        "Grass.cpp",
        "Sheep.cpp",
        "Milkweed.cpp",
        "Wolf.cpp",
        "Toadstool.cpp",
        "OrganismFactory.cpp",
        "-o",
        "world.out"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Buduje wersję konsolową LivingWorld"
    },
    {
      "label": "build-world-sdl",
      "type": "shell",
      "command": "/usr/bin/g++",
      "args": [
        "-std=c++17",
        "-g",
        "main_sdl.cpp",
        "World.cpp",
        "Organism.cpp",
        "Animal.cpp",
        "Plant.cpp",
        "Position.cpp",
        "Grass.cpp",
        "Sheep.cpp",
        "Milkweed.cpp",
        "Wolf.cpp",
        "Toadstool.cpp",
        "OrganismFactory.cpp",
        "SdlRenderer.cpp",
        "-o",
        "world_sdl",
        "-lSDL2",
        "-lSDL2_ttf"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "detail": "Buduje wersję SDL z oknem"
    }
  ]
}
